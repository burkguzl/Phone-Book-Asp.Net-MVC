@model TelefonRehberi.MvcWebUI.Models.CalisanKayitViewModel
@{
    ViewBag.Title = "Kayit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Yeni Çalışan Ekle</h2>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group row">
            @Html.LabelFor(i => i.Calisan.Ad, new { @class = "col-form-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(i => i.Calisan.Ad, new { @class = "form-control" })
                @Html.ValidationMessageFor(i => i.Calisan.Ad, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(i => i.Calisan.Soyad, new { @class = "col-form-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(i => i.Calisan.Soyad, new { @class = "form-control" })
                @Html.ValidationMessageFor(i => i.Calisan.Soyad, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(i => i.Calisan.Telefon, new { @class = "col-form-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(i => i.Calisan.Telefon, new { @class = "form-control" })
                @Html.ValidationMessageFor(i => i.Calisan.Telefon, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(i => i.Calisan.DepartmanId, new { @class = "col-form-label col-sm-2" })
            <div class="col-sm-10">
                @Html.DropDownListFor(i => i.Calisan.DepartmanId, new SelectList(@Model.Departmanlar, "DepartmanId", "Ad"), "Departman Seçin", new { @class = "form-control" })
                @Html.ValidationMessageFor(i => i.Calisan.DepartmanId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(i => i.Calisan.YoneticiId, new { @class = "col-form-label col-sm-2" })
            <div class="col-sm-10">
                @Html.DropDownListFor(i => i.Calisan.YoneticiId, new SelectList(@Model.Calisanlar, "CalisanId", "Ad"), "Yönetici Seçin", new { @class = "form-control" })
                @Html.ValidationMessageFor(i => i.Calisan.YoneticiId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <button class="btn btn-success" type="submit">Kaydet</button>
        </div>

    </div>

}
<hr />
@Html.ActionLink("Geri Dön", "Liste", "Calisan",null, new { @class = "btn btn-dark" })
<br /><br />
