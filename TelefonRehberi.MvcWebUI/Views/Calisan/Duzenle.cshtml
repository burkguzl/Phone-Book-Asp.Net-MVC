@model TelefonRehberi.MvcWebUI.Models.CalisanDuzenleViewModel
@{
    ViewBag.Title = "Duzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Calisan Düzenle</h2>
<hr />

@using (Html.BeginForm("Duzenle", "Calisan", FormMethod.Post))
{
    
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        
        @Html.ValidationSummary(true,"", new { @class="text-danger"})

        @Html.HiddenFor(i=>i.Calisan.CalisanId)
        
       <div class="form-group row">
            @Html.LabelFor(i => i.Calisan.CalisanId, new {@class = "col-sm-2 col-form-label"})
            <div class="col-sm-10">
                <input type="text" readonly class="form-control-plaintext" value="@Model.Calisan.CalisanId">
                @Html.ValidationMessageFor(i=>i.Calisan.CalisanId,"", new {@class="text-danger"})
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(i => i.Calisan.Ad, new {@class = "col-sm-2 col-form-label"})
            <div class="col-sm-10">
                @Html.TextBoxFor(i => i.Calisan.Ad, new { @class = "form-control" })
                @Html.ValidationMessageFor(i => i.Calisan.Ad, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(i => i.Calisan.Soyad, new {@class = "col-sm-2 col-form-label"})
            <div class="col-sm-10">
                @Html.TextBoxFor(i => i.Calisan.Soyad, new { @class = "form-control" })
                @Html.ValidationMessageFor(i => i.Calisan.Soyad, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(i => i.Calisan.Telefon, new {@class = "col-sm-2 col-form-label"})
            <div class="col-sm-10">
                @Html.TextBoxFor(i => i.Calisan.Telefon, new { @class = "form-control" })
                @Html.ValidationMessageFor(i => i.Calisan.Telefon, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(i => i.Calisan.DepartmanId, new {@class = "col-sm-2 col-form-label"})
            <div class="col-sm-10">
                @Html.DropDownListFor(i=>i.Calisan.DepartmanId,new SelectList(@Model.Departmanlar,"DepartmanId","Ad"),"Departman Seçin", new{@class="form-control"})
                @Html.ValidationMessageFor(i => i.Calisan.DepartmanId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(i => i.Calisan.YoneticiId, new {@class = "col-sm-2 col-form-label"})
            <div class="col-sm-10">
               @Html.DropDownListFor(i=>i.Calisan.YoneticiId,new SelectList(@Model.Calisanlar,"CalisanId","Ad"),"Yönetici Seçiniz", new {@class="form-control"})
                @Html.ValidationMessageFor(i => i.Calisan.YoneticiId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <button class="btn btn-warning" type="submit">Güncelle</button>
        </div>
    </div>
}
<hr />
@Html.ActionLink("Geri Dön", "Liste", "Calisan",null, new { @class = "btn btn-dark" })
<br /><br />


