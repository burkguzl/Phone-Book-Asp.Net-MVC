@model TelefonRehberi.MvcWebUI.Models.DepartmanViewModel
@{
    ViewBag.Title = "Departman Liste";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Departman Listesi</h2>

<table class="table table-striped table-hover">
    <thead>
    <tr>
        <th scope="col">Id</th>
        <th scope="col">Ad</th>
        <th scope="col">Acıklama</th>
        <th scope="col">Düzenle</th>
        <th scope="col">Sil</th>

    </tr>
    </thead>
    <tbody>
    @foreach (var departman in Model.Departmanlar)
    {
        <tr>

            <th scope="row">@departman.DepartmanId</th>
            <td>@departman.Ad</td>
            <td>@departman.Aciklama</td>

            <td>@Html.ActionLink("Düzenle", "Duzenle", "Departman", new { id = departman.DepartmanId }, new { @class = "btn btn-warning" })</td>
            <td>@Html.ActionLink("Sil","Duzenle","Departman", new { id = departman.DepartmanId }, new { @class = "btn btn-danger" })</td>
        </tr>
    }
    </tbody>
</table>
