@model TelefonRehberi.MvcWebUI.Models.
@{
    ViewBag.Title = "Duzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Departman Düzenle</h2>
<hr />

@using (Html.BeginForm("Duzenle", "Departman", FormMethod.Post))
{

    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(i => i.Departman.DepartmanId)

        <div class="form-group row">
            @Html.LabelFor(i => i.Departman.DepartmanId, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                <input type="text" readonly class="form-control-plaintext" value="@Model.Departman.DepartmanId">
                @Html.ValidationMessageFor(i => i.Departman.DepartmanId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(i => i.Departman.Ad, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(i => i.Departman.Ad, new { @class = "form-control" })
                @Html.ValidationMessageFor(i => i.Departman.Ad, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(i => i.Departman.Aciklama, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(i => i.Departman.Aciklama, new { @class = "form-control" })
                @Html.ValidationMessageFor(i => i.Departman.Aciklama, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <button class="btn btn-warning" type="submit">Güncelle</button>
        </div>
    </div>
}
<hr />
@Html.ActionLink("Geri Dön", "Liste", "Departman",null, new { @class = "btn btn-dark" })
<br /><br />


