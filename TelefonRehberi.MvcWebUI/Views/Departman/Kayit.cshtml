@model TelefonRehberi.MvcWebUI.Models.DepartmanKayitViewModel
@{
    ViewBag.Title = "Kayit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yeni Departman Ekle</h2>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group row">
            @Html.LabelFor(i => i.Departman.Ad, new { @class = "col-form-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(i => i.Departman.Ad, new { @class = "form-control" })
                @Html.ValidationMessageFor(i => i.Departman.Ad, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(i => i.Departman.Aciklama, new { @class = "col-form-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(i => i.Departman.Aciklama, new { @class = "form-control" })
                @Html.ValidationMessageFor(i => i.Departman.Aciklama, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <button class="btn btn-success" type="submit">Kaydet</button>
        </div>

    </div>
}


<hr />
@Html.ActionLink("Geri Dön", "Liste", "Departman",null, new { @class = "btn btn-dark" })
<br /><br />

